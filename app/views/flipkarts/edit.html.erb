<h1 class="text-center">Edit the form</h1>


<div class="d-flex justify-content-center align-item-center">
<%= form_with  model: @user, url: flipkart_path, method: :patch do |form| %>
<%= form.label :first_name,  "First Name:" %><br>
<%= form.text_field :first_name, class:'form-control ' %><br>

<%= form.label :last_name, "Last Name:" %><br>
<%= form.text_field :last_name , class:'form-control' %><br>

<%= form.label :phone_no, "Phone No:" %><br>
<%= form.text_field :phone_no , class:'form-control'%><br>

<%= form.label :alt_phone_no, "Alternate No:" %><br>
<%= form.telephone_field :alt_phone_no , class:'form-control'%><br>

<%= form.label :email, "Email:" %><br>
<%= form.email_field :email , class:'form-control'%><br>

<%= form.label :alt_email, "Alternate Email:" %><br>
<%= form.email_field :alt_email , class:'form-control'%><br>

<%= form.label :address, "Address:" %><br>
<%= form.text_field :address, class:'form-control' %><br>

<%= form.label :bio, "Profile Bio:" %><br>
<%= form.text_area :bio, class:'form-control' %><br>

User Type:
<%= form.radio_button :user_type, "admin" %>
<%= form.label :user_type_admin, "admin" %>
<%= form.radio_button :user_type, "customer" %>
<%= form.label :user_type_customer, "customer" %>
<br><br>
<%= form.label :adhaar_no, "Aadhar No:" %><br>
<%= form.text_field :adhaar_no, class:'form-control'%><br>

<%= form.label :pan_no, "Pan No:" %><br>
<%= form.text_field :pan_no, class:'form-control'%><br>

<%= form.label :password, "Password:" %><br>
<%= form.password_field :password, class:'form-control'%><br>
<%= form.submit 'Update' %>

<% end %>
</div>

<%= link_to 'Back', flipkarts_path, class:"btn btn-primary " %>


